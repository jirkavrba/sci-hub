{

  "manifest_version": 3,
  "name": "Enhancer for Sci-Hub",
  "version": "1.1",

  "description": "Sci-hub url parser to make your research easier!",
  "icons": {
    "128": "img/icon128.png",
    "64": "img/icon64.png",
    "48": "img/icon48.png",
    "16": "img/icon16.png"
  },

  "options_page": "html/options.html",

  "permissions": [
    "contextMenus",
    "storage"
  ],

  "host_permissions": [
    "https://scholar.google.com/*",
    "https://sci-hub.se/*",
    "https://sci-hub.do/*",
    "https://sci-hub.tf/*",
    "https://sci-hub.st/*",
    "https://sci-hub.ren/*",
    "https://sci-hub.shop/*",
    "https://sci-hub.it.nf/*"
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://scholar.google.com/*"],
      "js": ["js/highlight.js", "js/scholar.js"]
    },
    {
      "matches": [
        "*://sci-hub.se/*","*://www.sci-hub.se/*",
        "*://sci-hub.do/*","*://www.sci-hub.do/*",
        "*://sci-hub.tf/*","*://www.sci-hub.tf/*",
        "*://sci-hub.st/*","*://www.sci-hub.st/*",
        "*://sci-hub.ren/*","*://www.sci-hub.ren/*",
        "*://sci-hub.shop/*","*://www.sci-hub.shop/*",
        "*://sci-hub.it.nf/*","*://www.sci-hub.it.nf/*"
      ],
      "js": ["js/highlight.js", "js/sci-hub.js"]
    }
  ]

}
